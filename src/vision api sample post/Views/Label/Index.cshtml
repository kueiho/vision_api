<h2>上傳圖片</h2>
<div class="preview-layout" style="margin-top:20px;">
    <form class="uploadForm" action="@Url.Action("Label")" enctype="multipart/form-data" method="post" style="display: flex; align-items: center; gap: 16px; margin-bottom: 24px;">
        <input type="file" name="file" class="fileInput" accept="image/*" style="display:inline-block;" />
        <img class="previewImg" src="/images/lebel/101.jpg" alt="預覽" style="max-width:100%; border:1px solid #ccc; display:none; cursor:pointer;" />
        <button type="submit" style="display:none;">上傳</button>
    </form>
    <div class="json-row">
        <div class="json-col">
            <h5>Request JSON</h5>
            <pre class="requestJson" style="background:#f8f9fa; border:1px solid #ddd; padding:10px; min-height:300px;"></pre>
        </div>
        <div class="json-col">
            <h5>Response JSON</h5>
            <pre class="responseJson" style="background:#f8f9fa; border:1px solid #ddd; padding:10px; min-height:300px;"></pre>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.uploadForm').submit();
        });
    </script>
}